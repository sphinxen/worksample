<!DOCTYPE html>
<html>
<head>
  <title><%= @title%></title>
  <%= favicon_link_tag 'logo.ico' %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrapper">
	<nav id="top_menu">
		<%= link_to image_tag('logo.png'), root_path %>
	</nav>
	<div class="content">
		<div class="content left">
			<%= render 'mainmenu'%>
		</div>
		<div class="content main">
		<% flash.each do |name, message| %>
		<div id="flash_<%= name%>">
			<%= message %>
		</div>

		<%end%>
		<%= yield %>
		</div>
	</div>

<footer>
	&copy; 2013 by <%= mail_to 'sphinxen@gmail.com', 'Josef Karlsson' %>
</footer>
</div>
<%= yield :scripts %>

</body>
</html>
